<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <div class = "container ">
<div class="user-avatar" style="background-image: url('<%= image_path("photo") %>')">
</div>
<h1> Hello,<br> current.User.name</h1>
     </div>
      <%= f.input :avatar,
                    required: false,
                    input_html: { autocomplete: "avatar" } %>
      <%= f.input :avatar_cache, as: :hidden %>               
    <div class="name-input ">
    <div class style ="justify-content: space-between;
    margin-right: 26px;">
    <%= f.input :first_name, label: false, required: false, placeholder: "first name" %>
    </div>
    <%= f.input :last_name, required: false, label: false, placeholder: "last name" %>
    </div> 
    <%= f.input :email, required: true, autofocus: true, label:false, placeholder: "email" %>
    <%= f.input :address, required: false, label:false, placeholder: "adress" %>
    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" }, label:false, placeholder: "password" %>
  
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } ,label: false, placeholder: "current password"%>
    </div>
     <div class='form-edit-buttons'>
      <%= f.button :submit, "Update your restrictions", class: 'btn-orange m-3' %>
      <div class='d-flex justify-content-between w-75'>
          <%= f.button :submit, "Save", class: 'btn-green' %>
          <%= f.button :submit, "Cancel", class: 'btn-gray' %>
        
      </div>   
    </div>
  </div>


<% end %>





