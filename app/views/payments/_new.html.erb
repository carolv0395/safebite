<div class="modal fade" id="paymentsModal" tabindex="-1" role="dialog" aria-labelledby="paymentsModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="paymentsModalLabel">Shopping Basket Payment></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

		<%= form_tag order_payments_path(@order) do %>
		  <article>
		    <label class="total">
		      <span>Total price: <%= humanized_money_with_symbol(@order.total) %></span>
		    </label>
		  </article>

		  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
		    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		    data-name="My Order"
		    data-email="<%= current_user.email %>"
		    data-description="Products <%= @order.orders_products %>"
		    data-amount="<%= @order.total_cents %>"
		    data-currency="<%= @order.total.currency %>"></script>
		<% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

