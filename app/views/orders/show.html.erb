<div class="container pages-container">
      <h1>Thank you
      <% if current_user.first_name.present? %>
        <span>, <%= current_user.first_name %>!</span>
      <% else %>
        <span>!</span>
      <% end %>
      </h1>
</div>

<div class="container ty-pg-order thank-you-info">
  <h2>Items you've ordered:</h2>

  <div class="ordered-items-thank-you">

    <% @order.orders_products.sort_by(&:created_at).each do |orderproduct| %>
      <div class="add-product-card d-flex">

        <div class="product-image-price">
          <img src=<%= orderproduct.product.photo %> />
        </div>

        <div class="product-quantity-order">
          <h4> <%= orderproduct.product.name.capitalize %> </h4>
          <p> <%= orderproduct.product.brand.capitalize %> </p>
        </div>

        <div class="add-quantity d-flex flex-column justify-content-center pl-3">
          <div class ="quantity" id="order_count_<%= orderproduct.product.id %>">Quantity: <%= orderproduct.quantity %>
            <p>Price: <%= orderproduct.product.price %> â‚¬</p>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>

<div class="container total-price-thank-you">
  <p><strong>Total price paid: <%= humanized_money_with_symbol(@order.total) %></strong></p>
  <div class="pt-3">
    <span><strong>Your deliver is on the way.</strong></span>
    <br>
    <span>Have a nice and delicious meal!</span>
  </div>
</div>
