<div class="container pages-container">
  <h1>What are your allergies?</h1>
  <div class="separator"></div>
  <%= simple_form_for(Allergen.new, url: update_families_allergens_path) do |f| %>
    <div class="form-group">
      <label class="control-label check_boxes"><h4>Go ahead and select your food restrictions: </h4></label>
      <input type="hidden" name="post[category_ids][]" value="">
