        <div class="left-group">
          <!-- nuts -->
          <div class="family-box">
            <div class="hidden-icons 0 d-flex justify-content-center">
              <%= image_tag image_path('checked_icon.png'), class: "checked-icon"%>
            </div>
            <% if @allergens.present? %>
              <%  @checked = @allergens.pluck(:allergen_family_id).include?(AllergenFamily.all[0].id) ? "checked" : "" %>
            <% else %>
              <% @checked = "" %>
            <% end %>
            <input type="checkbox" class="d-none" value="<%= AllergenFamily.all[0].id %>" name="allergen[allergen_families_ids][]" id="allergen_families_ids_<%= AllergenFamily.all[0].id %>" <%= @checked %>>
            <label class="family-choice 0 left-choice" for="allergen_families_ids_<%= AllergenFamily.all[0].id %>">
            <%= image_tag image_path('peanuts_01.png'), class: "allergen-image" %><%= AllergenFamily.all[0].name.upcase %>
