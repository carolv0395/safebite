<div class="container">
  <div class="container p-3">

    <div class="row">
      <div class="col-sm-12">
        <h1><%= @product.name.capitalize %></h1>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="show-photo" style="background-image: url('<%= image_path(@product.photo) %>')"></div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-12">
        <h2><%= @product.brand.capitalize %></h2>
        <h3><%= @product.category %></h3>
        <p><%= @product.volume %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <p><strong><%= humanized_money_with_symbol(@product.price) %></strong></p>
        <% unless @product.discount == 0 || @product.discount.nil? || @product.discount.empty? %>
          <p>Discount: <%= @product.discount %></p>
          <% discount_price = @product.price - (@product.price * @product.discount) %>
          <p><%= discount_price %></p>
        <% end %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-12">
        <p><strong>Description:</strong> <%= @product.description %></p>
      </div>
    </div>

    <div class="row mt-3 cart">
      <div class="col-sm-12 d-flex justify-content-between p-3">
        <%= link_to "+", add_product_quantity_orders_path(product_id: @product.id), class: "btn-add" %>
        <p><strong><%= @quantity_in_pending_order %></strong></p>
        <%= link_to "-", remove_product_quantity_orders_path(product_id: @product.id), class: "btn-remove" %>
        <i class="fas fa-shopping-cart"></i>
        </div>
      </div>
    </div>

    <%= link_to "Checkout?", order_path, class: "btn-text" %>

  </div>
</div>


