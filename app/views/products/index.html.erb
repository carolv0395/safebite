<div class="container py-4 category-message">
  <h3>We know you want <br/>to avoid <%= current_user.allergens_families[0].allergen_family.name %>!  </h3>
</div>

  <% @categories.each do |category| %>
    <%= link_to category_products_path(category) do %>
      <div class="category-arrow">
        <div id="category-image"></div>
        <div class="category-text">
          <h3> <%= category.gsub(/_/, ' ').gsub(/and/, '&') %> </h3>
        </div>
        </div>
    <% end %>
  <% end %>
